{
  "manifest_version": 3,
  "name": "__MSG_App_Title_Default__",
  "description": "__MSG_App_Description_Default__",
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_icon": "assets/notsynced.png",
    "default_popup": "app.html",
    "default_title": "__MSG_App_Title_Default__"
  },
  "background": {
    "page": "background.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      }
    }
  },
  "default_locale": "zh",
  "permissions": [
    "activeTab",
    "alarms",
    "bookmarks",
    "downloads",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": ["http://*/", "https://*/"],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "connect-src *; default-src 'none'; font-src 'self' data:; img-src 'self' data:; script-src 'self'; style-src 'self' 'unsafe-inline';",
    "web_accessible_resources": [
      {
        "resources": ["*"],
        "matches": ["http://*/*", "https://*/*"]
      }
    ]
  }
}
